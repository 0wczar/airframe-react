{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "module": "ES2015",
        "target": "es6",
        "jsx": "react",
        "declaration": true,
        "baseUrl": "./src",
        "rootDir": "./",
        "paths": {
            "@components": ["components"],
            "@types": ["types"]
        },
        "outDir": "./lib",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["es2020.string", "DOM"]
    },
    "include": ["./src/**/*"],
}